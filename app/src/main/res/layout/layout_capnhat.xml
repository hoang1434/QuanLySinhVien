<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edMSSV"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:enabled="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edHoten"
            android:layout_below="@+id/edMSSV"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/edMSSV"
            android:layout_alignStart="@+id/edMSSV" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edLop"
            android:layout_below="@+id/edHoten"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/edHoten"
            android:layout_alignStart="@+id/edHoten" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:id="@+id/btnCapNhat"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cập nhật sinh viên"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:autoText="false"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mã SV"
            android:id="@+id/textView4"
            android:layout_above="@+id/edHoten"
            android:layout_toLeftOf="@+id/edMSSV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Họ tên"
            android:id="@+id/textView5"
            android:layout_above="@+id/edLop"
            android:layout_toLeftOf="@+id/edHoten"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lớp"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/edLop"
            android:layout_toLeftOf="@+id/edLop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="24dp" />

    </RelativeLayout>

</RelativeLayout>
